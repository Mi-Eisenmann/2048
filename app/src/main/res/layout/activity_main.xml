<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="38dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Highscore:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/highScoreField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Current Score:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/currentScoreField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/md_orange_300">


        <TableLayout
            android:id="@+id/field"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow>

                <TextView
                    android:id="@+id/field_00"
                    android:text="0-0"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000"/>

                <TextView
                    android:id="@+id/field_01"
                    android:text="0-1"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_02"
                    android:text="0-2"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_03"
                    android:text="0-3"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_04"
                    android:text="0-4"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/field_10"
                    android:text="1-0"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_11"
                    android:text="1-1"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_12"
                    android:text="1-2"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_13"
                    android:text="1-3"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_14"
                    android:text="1-4"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/field_20"
                    android:text="2-0"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_21"
                    android:text="2-1"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_22"
                    android:text="2-2"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_23"
                    android:text="2-3"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_24"
                    android:text="2-4"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/field_30"
                    android:text="3-0"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_31"
                    android:text="3-1"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_32"
                    android:text="3-2"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_33"
                    android:text="3-3"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_34"
                    android:text="3-4"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/field_40"
                    android:text="4-0"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_41"
                    android:text="4-1"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_42"
                    android:text="4-2"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_43"
                    android:text="4-3"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

                <TextView
                    android:id="@+id/field_44"
                    android:text="4-4"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColor="@color/md_white_1000" />

            </TableRow>



        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="480dp"
        android:paddingLeft="225dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/RestartButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/md_grey_700"
                android:textColor="@color/md_white_1000"
                android:gravity="center"
                android:text="Restart"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>